@keyframes roll-over {
  0% {
    margin-top: 0px;
  }

  50% {
    margin-top: -20px;
  }

  100% {
    margin-top: 0px;
  }
}

@keyframes run-over {
  0% {
    opacity: 0;
    top: 30px;
  }

  100% {
    opacity: 1;
    top: 0px;
  }
}

@keyframes come-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes breathLight {
  0% {
    opacity: 0;
    color: white;
    box-shadow: 0px 0px 10px 5px rgba(0, 0, 0, 0);
    background-color: rgba(0, 0, 0, 0);
  }

  20% {
    opacity: 1;
    color: white;
    box-shadow: 0px 0px 10px 5px rgba(0, 0, 0, 0);
    background-color: rgba(0, 0, 0, 0);
  }

  60% {
    opacity: 1;
    color: rgba(0, 0, 0, 1);
    box-shadow: 0px 0px 10px 5px $lightGreen, 0 0 2px 10px rgba(0, 0, 0, 0.6), 0 0 20px 10px $lightGreen;
    background-color: $lightGreen;
  }

  100% {
    opacity: 0;
    color: rgba(0, 0, 0, 1);
    box-shadow: 0px 0px 10px 5px $lightGreen, 0 0 2px 10px rgba(0, 0, 0, 0.6), 0 0 20px 10px $lightGreen;
    background-color: $lightGreen;
  }
}

roll-over($time) {
  // name duraiton timing-function delay iteration-count direction fill-mode
  animation: roll-over;
  animation-delay: 0;
  animation-duration: $time;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
}

run-over($time) {
  animation: run-over;
  animation-delay: 0;
  animation-duration: $time;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
}

come-in($time) {
  animation: come-in;
  animation-delay: 0;
  animation-duration: $time;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
}

breathLight($time) {
  animation: breathLight;
  animation-delay: 0;
  animation-duration: $time;
  animation-iteration-count: infinite;
}